<?xml version="1.0"?>
<Container version="2">
  <Name>SeekAndWatch</Name>
  <Repository>ghcr.io/softerfish/seekandwatch:latest</Repository>
  <Registry>https://github.com/softerfish/seekandwatch</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://www.reddit.com/r/SeekAndWatch/</Support>
  <Project>https://github.com/softerfish/seekandwatch</Project>
  <Overview>The ultimate self-hosted Plex companion. Now featuring SeekAndWatch Cloud: allow your users to request content easily without VPNs or reverse proxies. Includes Smart Discovery (recommendations based on history &amp; taste), direct Radarr/Sonarr integration, a no-code Kometa config builder, automated Plex collections, Overseerr support, and Tautulli trending. One dashboard: less scrolling, more watching.</Overview>
  <Category>MediaApp:Other Tools:Utilities</Category>
  <WebUI>http://[IP]:[PORT:5000]</WebUI>
  <Icon>https://raw.githubusercontent.com/softerfish/seekandwatch/main/icon.png</Icon>
  
  <Config Name="Web Port" Target="5000" Default="5000" Mode="tcp" Description="The Web UI Port" Type="Port" Display="always" Required="true" Mask="false">5000</Config>
  
  <Config Name="App Data" Target="/config" Default="/mnt/user/appdata/seekandwatch" Mode="rw" Description="Stores the database and settings" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/seekandwatch</Config>
  
  <Config Name="Timezone" Target="TZ" Default="UTC" Description="Container Timezone (e.g. America/New_York)" Type="Variable" Display="always" Required="false" Mask="false">UTC</Config>
  
  <Config Name="PUID" Target="PUID" Default="99" Description="Container User ID" Type="Variable" Display="advanced" Required="false" Mask="false">99</Config>
  <Config Name="PGID" Target="PGID" Default="100" Description="Container Group ID" Type="Variable" Display="advanced" Required="false" Mask="false">100</Config>
  <Config Name="Unraid App Store" Target="SEEKANDWATCH_UNRAID" Default="1" Description="Set to 1 so the app shows Update via App Store and disables the in-app one-click updater. Leave as 1 when installed from Community Applications." Type="Variable" Display="advanced" Required="false" Mask="false">1</Config>
</Container>